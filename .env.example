# GKS Home Dashboard - Environment Configuration
# Copy this file to .env and fill in your credentials

# Server Configuration
PORT=3000

# Proxmox VE Configuration
PROXMOX_URL=https://your-proxmox-ip:8006
PROXMOX_TOKEN_ID=user@pam!tokenname
PROXMOX_TOKEN_SECRET=your-token-secret-here

# Jellyfin Configuration
JELLYFIN_URL=http://your-jellyfin-ip:8096
JELLYFIN_API_KEY=your-jellyfin-api-key
JELLYFIN_USER_ID=your-user-id

# Jellyseerr Configuration
JELLYSEERR_URL=http://your-jellyseerr-ip:5055
JELLYSEERR_API_KEY=your-jellyseerr-api-key

# TVDB Configuration (optional - for enhanced metadata)
TVDB_API_KEY=your-tvdb-api-key
TVDB_PIN=your-subscriber-pin-optional

# Pyrodactyl Configuration
PYRODACTYL_URL=https://your-pyrodactyl-panel.com
PYRODACTYL_API_KEY=your-client-api-key

# Portainer Configuration
PORTAINER_URL=http://your-portainer-ip:9000
PORTAINER_ACCESS_TOKEN=your-access-token
PORTAINER_ENDPOINT_ID=1
